<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |user_stockh| %>
    <tr>
      <td><%= user_stockh.name %></td>
      <td><%= user_stockh.ticker %></td>
      <td><%= user_stockh.price %></td>
      <% if @user.id = current_user.id %>
      <td><%= link_to 'Delete', user_stock_path(user_stockh), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-xs btn-danger" %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>